+head(title)
body.layout-row
  .d-flex.flex-column.flex
    .row.no-gutters.h-100
      .col-md-6.bg-primary
        .p-3.p-md-5.d-flex.flex-column.h-100
          h4.mb-3.text-white Basik
          .text-fade Bootstrap 4 Web Application
          .d-flex.flex.align-items-center.justify-content-center.
            
            
          .d-flex.text-sm.text-fade
