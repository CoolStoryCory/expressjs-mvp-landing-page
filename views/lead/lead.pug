include ../common/head.pug
+head("Lead")
body
  header
    include ../common/navbar.pug
    +navbar(user)
  //  Custom styles for this template 
  link(href='/stylesheets/simple-sidebar.css', rel='stylesheet')
  .d-flex#wrapper
    //  Sidebar 
    .bg-light.border-right#sidebar-wrapper
      .sidebar-heading Dashboard
      .list-group.list-group-flush
        for item in panel
          a(href=item.link).list-group-item.list-group-item-action.bg-light #{item.name}
    //  /#sidebar-wrapper 
    //  Page Content 
    #page-content-wrapper
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Lead
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Edit
                  th(scope="col") Delete
                tr
              tbody                              
                tr(id=lead.id)
                  td
                    span #{lead.email}
                  td
                    a(href="/lead/" + lead.id + "/edit") Edit
                  td 
                    form(action="/lead/" + lead.id + "/delete", method="POST")
                      button(type="submit").btn.btn-primary Delete
  include ../common/footer.pug
  +footer()
  script(src='/javascripts/leads.js')
